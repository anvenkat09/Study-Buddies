<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/secondLayout"
    android:paddingBottom="16dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="16dp"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add new work..."
        android:id="@+id/addNewWork"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:layout_toLeftOf="@+id/confirmWork"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Work"
        android:id="@+id/confirmWork"
        android:layout_alignBaseline="@+id/addNewWork"
        android:layout_alignBottom="@+id/addNewWork"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addNewWork"
        android:nestedScrollingEnabled="true"
        android:id="@+id/workView">
    </ListView>

</RelativeLayout>